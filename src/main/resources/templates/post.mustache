{{> header}}

<section class="post">
    <header class="post-header">

        <h1 class="post-title">{{post.title}}</h1>

        <p class="post-meta">
            By  <a class="post-author" href="#"><strong>{{post.author.firstname}}</strong></a>, on <strong>{{post.addedAt}}</strong>
        </p>
    </header>

    <div class="post-description">
        <p>
            {{post.headline}}
        </p>

        <p>
            {{post.content}}
        </p>
    </div>
</section>

{{> footer}}
